<AddPengumuman>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: judul_input
            hint_text: 'Judul'
        # TextInput:
        #     id: tanggal_input
        #     hint_text: 'Tanggal'
        TextInput:
            id: isi_input
            hint_text: 'Isi'
        TextInput:
            id: waktu_input
            hint_text: 'Waktu pelaksanaan'
        TextInput:
            id: tempat_input
            hint_text: 'tempat pelaksanaan'
        TextInput:
            id: pengingat_tambahan_input
            hint_text: 'Pengingat Tambahan'
        Button:
            text: 'Simpan'
            on_press: root.add_pengumuman()

<EditPengumuman>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: judul_input
            hint_text: 'Judul'
        # TextInput:
        #     id: tanggal_input
        #     hint_text: 'Tanggal'
        TextInput:
            id: isi_input
            hint_text: 'Isi'
        TextInput:
            id: waktu_input
            hint_text: 'Waktu pelaksanaan'
        TextInput:
            id: tempat_input
            hint_text: 'tempat pelaksanaan'
        TextInput:
            id: pengingat_tambahan_input
            hint_text: 'Pengingat Tambahan'
        Button:
            text: 'Update'
            on_press: root.update_pengumuman()