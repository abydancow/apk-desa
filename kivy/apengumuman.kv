                    #         size: self.size
                    #         radius: [5]
                    #     Color:
                    #         rgba: 0, 0, 0, 0.19
                    #     RoundedRectangle:
                    #         pos: (self.x + 2, self.y)
                    #         size: self.size
                    #         radius: [5]
                    #     Color:
