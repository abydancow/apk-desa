#:kivy 2.3.0
<PengumumanList>:
    container: container
    BoxLayout:
        orientation:'vertical'
        padding: 20
        size_hint: 1, 1
        canvas:
            Color:
                rgba: 245/255, 243/255, 244/255, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation:'vertical'
            padding: 20
            size_hint: 1, 0.2
            canvas:
                Color:
                    rgba: 245/255, 243/255, 244/255, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation:'horizontal'
                size_hint: 1, 0.15
                padding: 10
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.19
                    RoundedRectangle:
                        pos: (self.x - 2, self.y)
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0, 0, 0.19
                    RoundedRectangle:
                        pos: (self.x + 2, self.y)
                        size: self.size
                        radius: [20]
                    Color:
                        rgba: 0, 0, 0, 0.23
                    RoundedRectangle:
                        pos: (self.x, self.y - 4)
                        size: (self.width, self.height + 5)
                        radius: [20]
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20] 
                Button:
                    size_hint: None, None
                    height: 35
                    widht: 50
                    pos_hint: {'left': 1, 'top': 1}  
                    x: self.parent.x + 20
                    on_press:
                        app.root.current = 'admin'
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 0.19
                        RoundedRectangle:
                            pos: (self.x - 2, self.y)
                            size: self.size
                            radius: [5]
                        Color:
                            rgba: 0, 0, 0, 0.19
                        RoundedRectangle:
                            pos: (self.x + 2, self.y)
                            size: self.size
                            radius: [5]
                        Color:
                            rgba: 0, 0, 0, 0.23
                        RoundedRectangle:
                            pos: (self.x, self.y - 3)
                            size: (self.width, self.height + 4)
                            radius: [5]
                    canvas:
                        Color:
                            rgba: 1, 1, 1, 1
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [5]
                    Image:
                        source: 'img/14.png'
                        size_hint: None, None
                        size: self.parent.width * 1, self.parent.height * 1
                        pos: self.parent.center_x - self.width / 2, self.parent.center_y - self.height / 2
                Label:
                    text: 'Pengumuman'
                    padding: [35, 10, 50, 10]
                    color: 0, 0, 0, 1
                    size_hint: None, None
                    size: self.parent.width * 0.7, self.parent.height * 1
                    pos_hint: {'x': 0.9, 'center_y': 0.45} 
                    valign: 'middle'
                    text_size: self.size  
                    font_size: 30
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.8
            spacing: 10
            padding: 20
            Button:
                text: 'Tambah Pengumuman'
                size_hint: 1, 0.1
                on_press: root.show_add_pengumuman()
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.19
                    RoundedRectangle:
                        pos: (self.x - 2, self.y)
                        size: self.size
                        radius: [5]
                    Color:
                        rgba: 0, 0, 0, 0.19
                    RoundedRectangle:
                        pos: (self.x + 2, self.y)
                        size: self.size
                        radius: [5]
                    Color:
                        rgba: 0, 0, 0, 0.23
                    RoundedRectangle:
                        pos: (self.x, self.y - 3)
                        size: (self.width, self.height + 4)
                        radius: [5]
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [5]
                Label:
                    text: 'Tamabah Pengumuman'
                    color: 0, 0, 0, 1
                    size_hint: None, None
                    size: self.parent.width * 0.2, self.parent.height * 0.9
                    pos: self.parent.center_x - self.width / 2, self.parent.y
            ScrollView:
                size_hint: 1, 0.9
                BoxLayout:
                    id: container
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
