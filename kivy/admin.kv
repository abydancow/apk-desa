#:kivy 2.3.0
<MyButton@Button>:
    color: 0, 0, 0, 1
    size_hint: 0.4, None
    height: 250
    background_color: 1, 1, 1, 1
    spacing: 20
    canvas.before:
        Color:
            rgba: 0, 0, 0, 0.19
        RoundedRectangle:
            pos: (self.x - 2, self.y)
            size: self.size
            radius: [5]

        Color:
            rgba: 0, 0, 0, 0.19
        RoundedRectangle:
            pos: (self.x + 2, self.y)
            size: self.size
            radius: [5]
        Color:
            rgba: 0, 0, 0, 0.23
        RoundedRectangle:
            pos: (self.x, self.y - 3)
            size: (self.width, self.height + 4)
            radius: [5]

    canvas:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [5]

